{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["web/*.js", "web/*.css"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off"
      }
    }
  },
  "javascript": {
    "globals": ["document", "window", "localStorage", "WebSocket", "location", "confirm", "setTimeout"]
  },
  "css": {
    "linter": {
      "enabled": true
    }
  },
  "formatter": {
    "enabled": false
  }
}
